{
    "name": "ShortsBlock",
    "description": "Blocking and hiding shorts on YouTube",
    "version": "1.1.2",
    "author": "artemgassan",
    "manifest_version": 3,
    "icons": {
        "16": "./assets/icons/favicon-16x16.png",
        "32": "./assets/icons/favicon-32x32.png"
    },
    "action": {},
    "permissions": ["scripting", "activeTab"],
    "background":{},
    "content_scripts": [
        {
          "matches": ["*://*.youtube.com/*"],
          "js": ["content.js"]
        }
      ]
}
