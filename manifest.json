{
    "name": "ShortsBlock",
    "description": "Blocking and hiding shorts on YouTube",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/favicon-16x16.png",
        "32": "icons/favicon-32x32.png"
    },
    "action": {},
    "permissions": ["scripting", "activeTab"],
    "background":{},
    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["content.js"]
        }
      ]
}
